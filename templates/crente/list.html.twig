{% extends '@EasyAdmin/default/layout.html.twig' %}
{% block body_class %}
    {{ app.user.roles|default([])|join(' ')|lower }}
{% endblock %}

{% set _content_title = 'Admin dashboard' %}
{% block page_title -%}
    {{ _content_title }}

{%- endblock %}

{% block main %}


    <div id="page-wrapper">
        <div class="graphs">
            <h3 class="blank1">Membros</h3>
            <form action="{{ path('crente_card') }}" method="get">

            <div id="custom-search-input">
                <div class="input-group col-md-6">
                    <input type="text" class="form-control input-md" placeholder="Buscar" name="busca" />
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-md" type="submit">
                           Pesquisar
                        </button>
                    </span>
                </div>
            </div>
            </form>

            <div class="xs tabls">


                <div class="bs-example4" data-example-id="contextual-table">


                    <table class="table">
                        <thead>
                        <tr>
                            {# sorting of properties based on query components #}
                            <th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
                            <th{% if pagination.isSorted('a.Nome') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nome', 'a.nome') }}</th>
                        </tr>
                        </thead>

                        {# table body #}
                        <tbody>
                        {% for crente in pagination %}
                            <tr {% if loop.index is odd %}class="success"{% endif %}>
                                <td>#</td>
                                <td>{{ crente.nome }}</td>
                                <td><a class="btn btn-info" href="{{ path('crente_gerar_card', {'id': crente.id}) }}"><span class="glyphicon glyphicon-bookmark">Gerar</span></a></td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}