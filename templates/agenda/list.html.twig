{% extends '@EasyAdmin/default/layout.html.twig' %}
{% block body_class %}
    {{ app.user.roles|default([])|join(' ')|lower }}
{% endblock %}

{% set _content_title = 'Admin dashboard' %}
{% block page_title -%}
    {{ _content_title }}

{%- endblock %}

{% block main %}
<style>

    .agenda {  }

    /* Dates */
    .agenda .agenda-date { width: 170px; }
    .agenda .agenda-date .dayofmonth {
        width: 40px;
        font-size: 36px;
        line-height: 36px;
        float: left;
        text-align: right;
        margin-right: 10px;
    }
    .agenda .agenda-date .shortdate {
        font-size: 0.75em;
    }


    /* Times */
    .agenda .agenda-time { width: 140px; }


    /* Events */
    .agenda .agenda-events {  }
    .agenda .agenda-events .agenda-event {  }

    @media (max-width: 767px) {

    }
</style>

<div class="container">

    <h2>Agenda</h2>
    <p class="lead">

    </p>
    <a class="btn btn-primary" href="{{ path('admin') }}?entity=Agenda&action=new" ><p>Novo Evento</p></a>


    <hr />

    <div class="agenda">
        <div class="table-responsive">
            <table class="table table-condensed table-bordered">
                <thead>
                <tr>
                    <th>Data</th>
                    {#<th>Hora</th>#}
                    <th>Evento</th>

                </tr>
                </thead>
                <tbody>
                <!-- Single event in a single day -->
    {% for agenda in evento %}
                <tr>
                    <td class="agenda-date" class="active" rowspan="1">
                        <div class="dayofmonth">{{ agenda.data  | date("d")   }}</div>
                        <div class="dayofweek">{{ agenda.data  | date("l") | localizeddate('long', 'none', 'pt',null,'E')  }}</div>
                        <div class="shortdate text-muted">{{ agenda.data  | date("d/m/Y", "Africa/Luanda") }}</div>
                    </td>
                   {# <td class="agenda-time">
                        {{ agenda.time  | date("h:i:s","Africa/Luanda") |trans}}
                    </td>#}
                    <td class="agenda-events">
                        <div class="agenda-event">
                            <i class="glyphicon glyphicon-repeat text-muted" title="Repeating event"></i>Â 
                            {{ agenda.nome }}
                        </div>
                    </td>


                </tr>
    {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
</div>


{% endblock %}